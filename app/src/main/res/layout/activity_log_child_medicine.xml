<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.child.LogChildMedicine">
    <include layout="@layout/back_button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="401dp"
        android:layout_height="26dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="90dp"
        android:background="@color/light_purple"
        android:text="@string/medicine_log_welcome"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="357dp"
        android:layout_height="228dp"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="27dp">

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1" >

        <TableRow
            android:layout_width="fill_parent"
            android:background="@color/grey">

            <TextView
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:text="@string/table_time_header"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:text="@string/table_dose_header"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/controller_logging"
        android:textColor="#593D97"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="157dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rescue_logging"
        android:textColor="@color/dark_purple"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="457dp" />

    <TableLayout
        android:layout_width="357dp"
        android:layout_height="228dp"
        android:layout_marginTop="404dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="27dp">

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1" >

        <TableRow
            android:layout_width="fill_parent"
            android:background="@color/grey">

            <TextView
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:text="@string/table_time_header"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:text="@string/table_dose_header"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </TableRow>
    </TableLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="63dp"
        android:layout_height="54dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="122dp" />

</androidx.constraintlayout.widget.ConstraintLayout>