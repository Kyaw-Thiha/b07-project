<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C7BE5">

    <!-- 中间白卡片 -->

    <!-- 底部导航：第二个点亮 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardOnboarding"
        android:layout_width="383dp"
        android:layout_height="587dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="96dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013">

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="555dp"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 顶部插画：可以先复用同一个医生图 -->
            <ImageView
                android:id="@+id/imageIllustration"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="Data source illustration"
                android:scaleType="fitCenter"
                android:src="@drawable/provider_instruction_doctor_2" />

            <!-- 标题 -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Where Does This Data Come From?"
                android:textColor="#1A202C"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- 正文 -->
            <TextView
                android:id="@+id/textSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:text="Parents invite you to connect with their child.\nYou only see what they choose to share, and they can update sharing at any time.\n\nInvites use one-time codes or links (valid for 7 days and revocable). Parents may also export PDF/CSV reports."
                android:textColor="#4A5568"
                android:textSize="15sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back / Skip（你可以决定是 Skip 还是 Back，这里先写 Skip） -->
        <TextView
            android:id="@+id/buttonSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- 中间小圆点：第二个高亮 -->
        <LinearLayout
            android:id="@+id/dotsIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_dot_inactive" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_dot_active" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_dot_inactive" />
        </LinearLayout>

        <!-- 下一页按钮（圆形） -->
        <ImageButton
            android:id="@+id/buttonNext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_arrow_right"
            android:tint="@android:color/white"
            android:padding="12dp"
            android:contentDescription="Next" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
