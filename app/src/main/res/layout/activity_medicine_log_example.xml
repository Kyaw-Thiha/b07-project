<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total logs: 0" />

    <!-- Button to demonstrate addInventory(...) -->
    <Button
        android:id="@+id/buttonAddExampleLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Add example log" />

    <!-- Button to demonstrate updateInventory(...) -->
    <Button
        android:id="@+id/buttonUpdateExampleLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Update example log" />

    <!-- Button to demonstrate deleteInventory(...) -->
    <Button
        android:id="@+id/buttonDeleteExampleLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Delete example log" />

</LinearLayout>
