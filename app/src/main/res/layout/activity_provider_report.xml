<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.provider.ProviderReportActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/report_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="96dp">

            <TextView
                android:id="@+id/report_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textStyle="bold"
                tools:text="Alex Parker" />

            <TextView
                android:id="@+id/report_date_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                tools:text="Jan 1 â€“ Mar 31" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/light_purple"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/report_rescue_days"
                            android:textAppearance="?attr/textAppearanceLabelMedium" />

                        <TextView
                            android:id="@+id/report_rescue_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"
                            tools:text="12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/report_controller_adherence"
                            android:textAppearance="?attr/textAppearanceLabelMedium" />

                        <TextView
                            android:id="@+id/report_controller_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"
                            tools:text="82%" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/report_symptom_days"
                            android:textAppearance="?attr/textAppearanceLabelMedium" />

                        <TextView
                            android:id="@+id/report_symptom_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"
                            tools:text="5 days" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/report_trends_title"
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/chart_rescue_usage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.example.b07project.view.charts.fragments.RescueUsageTrendFragment"
                    tools:layout_height="320dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/chart_controller_adherence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.example.b07project.view.charts.fragments.ControllerAdherenceTrendFragment"
                    tools:layout_height="320dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/chart_zone_distribution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.example.b07project.view.charts.fragments.ZoneDistributionFragment"
                    tools:layout_height="320dp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/chart_pef_trend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.example.b07project.view.charts.fragments.PefTrendFragment"
                    tools:layout_height="320dp" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/report_triage_title"
                android:textAppearance="?attr/textAppearanceTitleMedium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/report_triage_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_triage_incident" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/report_export_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/report_export_pdf"
        app:layout_anchorGravity="bottom|end"
        app:icon="@drawable/ic_launcher_foreground"
        app:layout_anchor="@id/report_scroll" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
