<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProviderDashboardActivity">

    <FrameLayout
        android:id="@+id/providerHeader"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="#2C7BE5">

        <!-- heading text -->
        <TextView
            android:id="@+id/providerTitle"
            android:layout_width="256dp"
            android:layout_height="96dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="26dp"
            android:text="Chilrdren Shared With You"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/childrenRecycler"
        android:layout_width="match_parent"
        android:layout_height="641dp"
        android:layout_weight="2"
        android:padding="16dp"
        android:visibility="visible"
        tools:listitem="@layout/child_item" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

</LinearLayout>
